{
  "version": 2,
  "buildCommand": "cd ClientApp && npm install && npm run build",
  "outputDirectory": "ClientApp/dist/sdms-b2c-webapp",
  "installCommand": "cd ClientApp && npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "SDMS_B2CWebApp_url": "@sdms_b2cwebapp_url",
    "SDMS_AuthenticationWebApp_url": "@sdms_authenticationwebapp_url",
    "SDMS_AuthenticationWebApp_clientid": "@sdms_authenticationwebapp_clientid",
    "SDMS_AuthenticationWebApp_redirectUri": "@sdms_authenticationwebapp_redirecturi",
    "SDMS_AuthenticationWebApp_scope": "@sdms_authenticationwebapp_scope"
  }
}

